<%= render 'shared/display_errors', resource: @answer %>
<%= form_with model: [:admin, @question, @answer], local: true do |form| %>

<p>
  <%= form.label :body %><br>
  <%= form.text_area :body, id: :answer_body, rows: 5, cols: 50 %><br>
</p>

<p>
  <%= form.label :correct %><br>
  <%= form.check_box :correct, id: :answer_correct %>
</p>

<p><%= form.submit %></p>
  <%= link_to 'Back', admin_question_path(@answer.question) %>
<% end %>