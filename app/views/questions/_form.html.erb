<h3><%= question_header %></h3>

<%= form_with model: [@test, @question], local: true do |form| %>
<%= render 'shared/display_errors', resource: @test  %>

<div>
  <%= form.label :body %>
  <%= form.text_field :body, value: @question.body %>
</div>

<div>
  <%= form.label :test_id %>
  <%= form.collection_select :test_id, Test.all, :id, :title, prompt: 'Choose category' %>
</div>

<p><%= form.submit %></p>
<% end %>
<p><%= link_to 'Back', url_for(@question.test) %></p>
