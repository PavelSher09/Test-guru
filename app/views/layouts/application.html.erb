<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= link_to t('.project_name'), root_path %></h1>
    <% if user_signed_in? %>
      
      <p class="nav user">
           <%= link_to t('.greeting') %>, <b class="nav user-email"><%= current_user.email %></b> Guru
          | <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
      </p>

    <% end %>

    <%= render 'shared/flash'%>

    <%= yield %>
    <%= render "shared/footer" %>
  </body>
</html>
